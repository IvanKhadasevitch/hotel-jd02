<?xml version="1.0" encoding="utf-8" ?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true" monitoring="autodetect" dynamicConfig="true">

    <diskStore path="D:\TMP\CACHE"/>
    <defaultCache  maxEntriesLocalHeap="300"
                   eternal="false"
                   timeToIdleSeconds="300"
                   timeToLiveSeconds="600"
                   memoryStoreEvictionPolicy="LRU"
                   overflowToDisk="true">
    </defaultCache>
    <!--LRU - вытеснения объектов кэша По максимальному времени не использования объекта кэша в кэше-->

    <cache name="org.hibernate.cache.StandardQueryCache"
           maxEntriesLocalHeap="20"
           eternal="false"
           timeToLiveSeconds="120"
           overflowToDisk="true">
           <!--<persistence strategy="localTempSwap"/>-->
    </cache>
    <cache name="pojos.RoomType"
           maxEntriesLocalHeap="21"
           eternal="false"
           timeToIdleSeconds="700"
           timeToLiveSeconds="7000"
           memoryStoreEvictionPolicy="LRU"
           overflowToDisk="true">
    </cache>
    <cache name="pojos.User"
           maxEntriesLocalHeap="21"
           eternal="false"
           timeToIdleSeconds="700"
           timeToLiveSeconds="7000"
           memoryStoreEvictionPolicy="LRU"
           overflowToDisk="true">
    </cache>
    <cache name="pojos.Hotel"
           maxEntriesLocalHeap="21"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="7000"
           memoryStoreEvictionPolicy="LRU"
           overflowToDisk="true">
    </cache>
    <cache name="pojos.Room"
           maxEntriesLocalHeap="71"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="7000"
           memoryStoreEvictionPolicy="LRU"
           overflowToDisk="true">
    </cache>
</ehcache>

